# .editorconfig — spójne formatowanie w edytorach
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown: nie wycinaj spacji na końcu (listy, tabele)
[*.md]
trim_trailing_whitespace = false

# Makefile i podobne
[Makefile]
indent_style = tab

# JSON/JSONC
[*.{json,jsonc}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# HTML/CSS/JS/TS
[*.{html,css,scss,js,jsx,ts,tsx}]
indent_size = 2
